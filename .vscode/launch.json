  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch localhost chrome",
      "type": "chrome",
      "request": "launch",
      // "reAttach": true,
      "runtimeExecutable": "/Applications/Brave Browser.app/Contents/MacOS/Brave Browser",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "../*": "${webRoot}/*"
      }
    }
  ]
}
